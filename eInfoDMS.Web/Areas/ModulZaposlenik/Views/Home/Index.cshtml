@using eInfoDMS.Data.DAL
@using eInfoDMS.Web.Areas.ModulZaposlenik.Models
@model eInfoDMS.Web.Areas.ModulZaposlenik.Models.HomeIndexVM

<div class="content-wrapper">
    <!-- Content Wrapper. Contains page content -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Zaposlenja
            <small>it all starts here</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Examples</a></li>
            <li class="active">Blank page</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Zaposlenja</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <table class="table table-striped table-bordered dataTable no-footer" id="nesto1">
                    <thead>
                        <tr>
                            <th>Radno mjesto</th>
                            <th>Početak</th>
                            <th>Kraj</th>
                            <th>Korisnicka uloga</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (HomeIndexVM.ZaposlenjaInfo x in Model.TabelaPodaci)
                        {
                            <tr>
                                <td>@x.ZaposlenjeMjestoNaziv</td>
                                <td>@x.UgovorPocetak.ToMyStrDMYYYY()</td>
                                <td>@x.UgovorKraj.ToMyStrDMYYYY("")</td>

                                <td style="width: 200px">@Html.ActionLink(@x.KorisnickaUloga.ToString(), "OdabirZaposlenje", new { x.ZaposlenjeId }, new { @class = "btn btn-warning btn-block" })</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                Footer
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
    <!-- /.content-wrapper -->
</div>
